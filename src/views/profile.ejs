<!DOCTYPE html>
<html lang="es">

<%-include('./partials/head') %>

  <body>
    <!-- encabezado -->
    <%-include('./partials/header') %>

      <!-- main -->

      <main class="detail">
        <div class="container">
          <div class="row">
            <div class="col-12 col-md-8 mx-auto my-5">
              <div class="card border rounded shadow p-3">
                <div class=" text-center">

                  <img id="img-preview" class="rounded-circle w-25" src="/images/users/<%= user.avatar %> " alt="">

                </div>

                <form id="form-profile" class="row" action="/users/update?_method=PUT" method="POST"
                  enctype="multipart/form-data">
                  <div class="mb-3 col-12 col-md-6">
                    <label for="exampleInputName">Nombre</label>
                    <input type="text" class="form-control" id="exampleInputName" aria-describedby="emailHelp"
                      name="name" value="<%= user.name %>">
                    <span class="text-danger small">
                      <%= locals.errores && locals.errores.name ? errores.name.msg : null %>
                    </span>
                  </div>
                  <div class="mb-3 col-12 col-md-6">
                    <label for="exampleInputApellido">Apellido </label>
                    <input type="text" class="form-control" id="exampleInputApellido" aria-describedby="emailHelp"
                      name="surname" value="<%= user.surname %>">
                    <span class="text-danger small">
                      <%= locals.errores && locals.errores.surname ? errores.surname.msg : null %>
                    </span>
                  </div>

                  <div class="mb-3 col-12 col-md-6">
                    <label for="exampleInputEmail1">Direccion de correo electronico </label>
                    <input type="email" class="form-control" name="email" value="<%= user.email %>"
                      aria-describedby="emailHelp" id="exampleInputEmail1" readonly>
                  </div>

                  <div class="mb-3 col-12 col-md-6">
                    <label for="exampleInputPassword1">Ingrese su Contreseña </label>
                    <input type="password" class="form-control" name="password" id="input-pass">
                    <span class="text-danger small">
                      <%= locals.errores && locals.errores.password ? errores.password.msg : null %>
                    </span>
                  </div>
                  <div class="d-flex justify-content-around mt-5">
                    <div class="">
                      <label for="input-avatar" class="btn btn-primary">Subir Imagen<label>
                          <input type="file" name="avatar" id="input-avatar" hidden>
                    </div>
                    <button class="btn btn-primary" type="submit">Guardar cambios</button>
                  </div>
                

                </form>
                </form>
              </div>
            </div>
          </div>

        </div>
      </main>

      <script src="/js/profile.js"></script>

      <!-- Pie de la página -->
      <%-include('./partials/footer') %>

        <!-- scripts -->
        <%-include('./partials/scripts') %>

  </body>

</html>