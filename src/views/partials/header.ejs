<header>
    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container-fluid">
          <a class="navbar-brand" href="/"><img src="/images/logo.png" alt=""></a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
              <li><a class="nav-link" href="#">Smartphones </a></li>

              <li><a class="nav-link" href="#">Tablets </a></li>

                <li><a class="nav-link" href="/admin">ADMIN </a></li>

            </ul>
            <form id="form-search-header" class="d-flex" action="/search" >
                <input id="search-header" class="form-control me-2" type="search" placeholder="Buscar..." name="busqueda">
                <button class="btn btn-outline-light" type="submit">Buscar</button>
              </form>
            
            <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
              <% if (locals.userLogin) { %>
                <li class="nav-item dropdown">
                  <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                    <%= locals.userLogin.name %> 
                  </a>
                  <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                    <% if (locals.userLogin.rolId === 2) { %>
                      <li><a class="dropdown-item" href="/admin">Administración</a></li>
                    <% } %>
                    <li><a class="dropdown-item" href="/users/profile">Mi perfil</a></li>
                    <li><a class="dropdown-item" href="/users/logout">Cerrar sesión</a></li>
                  
                  </ul>
                </li>
                <li class="nav-item">
                  <button type="button" class="nav-link btn-cart" data-bs-toggle="modal" data-bs-target="#modal-carrito">
                    <i class="fas fa-shopping-cart"></i>
                    <span id="span-cantidad" class="badge rounded-pill bg-warning"></span>
                  </button>
                </li>
              <% } else { %>
              <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                  User
                </a>
                <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                  <li><a class="dropdown-item" href="/users/login">Login </a></li>
                  <li><a class="dropdown-item" href="/users/register">Register </a></li>
                </ul>
              </li>
              <% } %>
              </ul>
              <div class="switch" id="switch">
                <span class="switch-sun"><i class="fas fa-sun"></i></span>
                <span class="switch-moon"><i class="fas fa-moon"></i></span>
              </div>
          </div>
         
        </div>
      
      </nav>
     
</header>

<aside>
  <!-- Modal -->
  <div class="modal fade" id="modal-carrito" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content" id="miCarrito">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Mi changuito</h5>
        </div>
        <div class="modal-body" id="lista-carrito">
          <div class="table-responsive">
            <table class="table">
              <thead id="cart-head">
                <tr>
                  <th colspan="3">Producto</th>
                  <th scope="col">Precio</th>
                  <th scope="col">SubTotal</th>
                </tr>
              </thead>
              <tfoot id="cart-footer">
                <tr>
                  <th colspan="4"  class="text-end" id="totaltitle">TOTAL:</th>
                  <th >
                    <h5 id="total"></h5>
                  </th>
                </tr>
              </tfoot>
                <tbody id="changuito">
                  <span id="cart-empty" class="text-danger">El carrito no tiene productos agregados</span>
                </tbody>
               
              </table>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-sm btn-danger" id="btn-cart-empty">Vaciar carrito</button>
          <button type="button" class="btn btn-sm btn-success" data-bs-dismiss="modal">Seguir comprando</button>
          <a href="/compra" class="btn btn-sm btn-primary" id="btn-next-buy"> Finalizar compra</a>
        </div>
      </div>
    </div>
  </div>
</aside>

<script>
document.getElementById('form-search-header').addEventListener('submit', e => {
  e.preventDefault()
  document.getElementById('search-header').value !== '' && document.getElementById('form-search-header').submit()
})
</script>