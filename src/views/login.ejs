<!DOCTYPE html>
<html lang="es">
<%- include('./partials/head') %>

    <body class="login">
        <%- include('./partials/header') %>
            <main class="container">
                <div class="row">
                    <div class="col-12 col-md-8 col-lg-6 mx-auto ">
                        <div class="card shadow mt-3">
                            <div class="card-header">
                                <h3>BIENVENIDO</h3>

                            </div>
                            <div class="card-body">
                                <form action="" method="POST">
                                    <div class="mb-3">
                                        <label for="email">Email</label>
                                        <input class="form-control" type="email" name="email" id="email"
                                            placeholder="Ingresá tu email">
                                    </div>
                                    <div class="mb-3 ">
                                        <label for="password">Contraseña</label>
                                        <div class="position-relative">
                                            <input class="form-control" type="password" name="password" id="password"
                                                placeholder="contraseña">
                                            <button class="position-absolute top-0 end-0 btn btn-outline-dark "
                                                type="button" id="watch" type="button"><i
                                                    class="fas fa-eye"></i></button>
                                        </div>


                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" name="recordar" id="recordar">

                                        <label class="form-check-label" for="recordar">Recordarme</label>

                                    </div>
                                    <small class="text-danger small">
                                        <%= locals.errores && errores.email ? errores.email.msg : null %>
                                    </small>
                                    <div class="text-end">
                                        <button class="btn btn-primary" type="submit">Ingresar</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </main>

            <script>

                let btnWatch = document.getElementById('watch');
                let inputPass = document.getElementById('password');

                btnWatch.addEventListener('click', () => {
                    if (inputPass.getAttribute('type') == 'text') {
                        inputPass.setAttribute('type', 'password')
                    } else {
                        inputPass.setAttribute('type', 'text')
                    }
                })

               /*  document.querySelector('.campo span').addEventListener('click', e => {
                    const pass = document.querySelector('#pass');
                    if (e.target.classList.contains('show')) {
                        e.target.classList.remove('show');
                        e.target.textContent = 'Ocultar'; pass.type = 'text';
                    }
                    else {
                        e.target.classList.add('show');
                        e.target.textContent = 'Mostrar'; pass.type = 'password';
                    }
                }); */

            </script>

            <%- include('./partials/footer') %>
                <%- include('./partials/scripts') %>

    </body>

</html>